{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target":"ES2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./__tests__"],
    "baseUrl": "./",
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.mock.ts",
    "__tests__"
  ]
}
